// 清除浮动
$clear()
  &:after
    content: ''
    display: block
    clear: both

// 不换行
$no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

$flex()
  line-height: normal
  display: flexbox
  -webkit-display: -webkit-flex
  -ms-display: -ms-flex
  flex-flow: row wrap

$active-block()
  cursor: pointer;
  -webkit-user-select: none;
  -webkit-tap-highlight-color: transparent
  &:active
    box-shadow: inset 0 0 0 rgba(#000, 0.1), inset 0 -1.63rem 0 rgba(#000, 0.1)
